@model List<MvcExample.Models.TableItem>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}
<div>
    <hr/>
    <div class="row">
        <div class="col-md-3">
            Id
        </div>
        <div class="col-md-9">
            Name
        </div>
    </div>
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-3">
                    @Html.DisplayFor(x => item.Id)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(x => item.Name)
                </div>
            </div>
        }
    <hr/>
</div>
<div>
    @if (Model.Count == 0)
    {
        @Html.Label("This is no item for display")
    }
</div>
@*@Html.TextBox("CountOfItems")*@
@Html.ActionLink("Draw Items", "Display", new {id = 2}, new {@class = "btn btn-default"})