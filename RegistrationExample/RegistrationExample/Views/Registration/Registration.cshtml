@model RegistrationExample.Models.UserViewModel
@{
    ViewBag.Title = "Register new user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>


@using (Html.BeginForm("RegisterUser", "Registration", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="col-md-8">
        @Html.LabelFor(x => x.FirstName, new { @class = "col-md-2" })
        @Html.TextBoxFor(x => x.FirstName, new { @class = "col-md-6" })
        @Html.ValidationMessageFor(x => x.FirstName)
    </div>
    <div class="col-md-5">
        <input type="submit" class="btn btn-default" value="Register" />
    </div>
}

